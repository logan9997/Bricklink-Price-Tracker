select name, item_id, round(avg_price - (
    /*get price of most recent date*/
    select avg_price
    from price P2
    where P2.item_id = P1.item_id
        and date = (
            select max(date)
            from price
        ) 
),2) as [£ change]

from price P1, item I
where I.item_id = P1.item_id 
    and date = (
        /*get price of oldest date*/
        select min(date)
        from price
    ) 
order by [£ change] desc